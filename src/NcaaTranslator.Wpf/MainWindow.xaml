<Window x:Class="NcaaTranslator.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NcaaTranslator.Wpf"
        xmlns:lib="clr-namespace:NcaaTranslator.Library;assembly=NcaaTranslator.Library"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="NCAA Translator" Height="600" Width="1000"
        Background="{DynamicResource BackgroundBrush}"
        Loaded="MainWindow_Loaded">
    <Grid Background="{DynamicResource BackgroundBrush}">
        <TabControl x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged" Style="{DynamicResource ModernTabControlStyle}" TabStripPlacement="Top">
            <TabItem Header="Main" Style="{DynamicResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" Width="80" Margin="0,0,10,0" Style="{DynamicResource ModernButtonStyle}"/>
                        <Button x:Name="StopButton" Content="Stop" Click="StopButton_Click" Width="80" Margin="0,0,10,0" IsEnabled="False" Style="{DynamicResource ModernButtonStyle}"/>
                        <TextBlock x:Name="StatusText" Text="Status: Stopped" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock x:Name="LastUpdateText" Text="Last Update: Never" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" Margin="10" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="SportsItemsControl" ItemsSource="{Binding SportTabs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Margin="0,0,0,10" Padding="5" IsExpanded="{Binding IsExpanded, Mode=TwoWay}" Style="{DynamicResource ModernExpanderStyle}">
                                        <Expander.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextPrimaryBrush}">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} (Conf: {1}, Non-Conf: {2}, Home: {3})">
                                                            <Binding Path="SportName"/>
                                                            <Binding Path="ConfGamesCount"/>
                                                            <Binding Path="NonConfGamesCount"/>
                                                            <Binding Path="HomeGamesCount"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <TextBlock Text="{Binding GameDisplayMode}" VerticalAlignment="Center" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                            </StackPanel>
                                        </Expander.Header>
                                        <DataGrid ItemsSource="{Binding Games}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" CanUserReorderColumns="False" Style="{DynamicResource ModernDataGridStyle}">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Home" Binding="{Binding teams[0].nameShort}" Width="150"/>
                                                <DataGridTextColumn Header="Score" Binding="{Binding teams[0].score}" Width="60">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Away" Binding="{Binding teams[1].nameShort}" Width="150"/>
                                                <DataGridTextColumn Header="Score" Binding="{Binding teams[1].score}" Width="60">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Clock" Binding="{Binding displayClock}" Width="100"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>

            <TabItem Header="Settings" Style="{DynamicResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TabControl Grid.Row="0" Margin="10" Style="{DynamicResource ModernTabControlStyle}">
                        <!-- General Tab -->
                        <TabItem Header="General" Style="{DynamicResource ModernTabItemStyle}">
                            <ScrollViewer Margin="10">
                                <StackPanel x:Name="GeneralSettingsPanel">
                                    <!-- Timer setting -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Timer (seconds): " Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <ComboBox x:Name="TimerComboBox" Width="100" IsEditable="true" Style="{DynamicResource ModernComboBoxStyle}" SelectionChanged="TimerComboBox_SelectionChanged" LostFocus="TimerComboBox_LostFocus">
                                            <ComboBox.ItemsSource>
                                                <x:Array Type="sys:Int32">
                                                    <sys:Int32>5</sys:Int32>
                                                    <sys:Int32>10</sys:Int32>
                                                    <sys:Int32>15</sys:Int32>
                                                    <sys:Int32>20</sys:Int32>
                                                    <sys:Int32>30</sys:Int32>
                                                    <sys:Int32>60</sys:Int32>
                                                    <sys:Int32>120</sys:Int32>
                                                    <sys:Int32>300</sys:Int32>
                                                </x:Array>
                                            </ComboBox.ItemsSource>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Home team setting -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="Home Team: " Width="120" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <ComboBox x:Name="HomeTeamComboBox" Width="200" IsEditable="true" Style="{DynamicResource ModernComboBoxStyle}" SelectionChanged="HomeTeamComboBox_SelectionChanged" LostFocus="HomeTeamComboBox_LostFocus"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>

                        <!-- Sports Tab -->
                        <TabItem Header="Sports" Style="{DynamicResource ModernTabItemStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Sports Search -->
                                <Grid Grid.Row="0" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Search Sports:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBox Grid.Column="1" x:Name="SportsSearchTextBox" Margin="0,0,10,0" TextChanged="SportsSearchTextBox_TextChanged" Style="{DynamicResource ModernTextBoxStyle}"/>
                                    <Button x:Name="AddSportButton" Grid.Column="2" Content="Add Sport" Click="AddSportButton_Click" Width="100" Style="{DynamicResource ModernButtonStyle}"/>
                                </Grid>

                                <!-- Sports DataGrid -->
                                <DataGrid x:Name="SportsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                                          CanUserDeleteRows="False" SelectionMode="Single" IsReadOnly="False" CanUserReorderColumns="False" Style="{DynamicResource ModernDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding SportName}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="Short" Binding="{Binding SportShortName}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="Code" Binding="{Binding SportCode}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled, UpdateSourceTrigger=PropertyChanged}" Width="Auto" ElementStyle="{DynamicResource CenteredModernCheckBoxStyle}" EditingElementStyle="{DynamicResource CenteredModernCheckBoxStyle}"/>
                                        <DataGridTemplateColumn Header="Conference" Width="Auto" MinWidth="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ConferenceName}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox SelectedItem="{Binding ConferenceName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding ConferenceNames, RelativeSource={RelativeSource AncestorType=Window}}" Style="{DynamicResource ModernComboBoxStyle}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="Display Mode" Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding GameDisplayMode}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                            <DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <ComboBox SelectedItem="{Binding GameDisplayMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding GameDisplayModes, RelativeSource={RelativeSource AncestorType=Window}}" />
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellEditingTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Division" Binding="{Binding Division}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="Week" Binding="{Binding Week}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridCheckBoxColumn Header="Top 25" Binding="{Binding ListsNeeded.top25Games, UpdateSourceTrigger=PropertyChanged}" Width="Auto" ElementStyle="{DynamicResource CenteredModernCheckBoxStyle}" EditingElementStyle="{DynamicResource CenteredModernCheckBoxStyle}"/>
                                        <DataGridCheckBoxColumn Header="OOS Enabled" Binding="{Binding OosUpdater.Enabled, UpdateSourceTrigger=PropertyChanged}" Width="Auto" ElementStyle="{DynamicResource CenteredModernCheckBoxStyle}" EditingElementStyle="{DynamicResource CenteredModernCheckBoxStyle}"/>
                                        <DataGridTextColumn Header="OOS Path" Binding="{Binding OosUpdater.OosFilePath}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="OOS File" Binding="{Binding OosUpdater.OosFileName}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="OOS Scores" Binding="{Binding OosUpdater.NumberOfOutScores}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="OOS Teams" Binding="{Binding OosUpdater.NumberOfTeamsPer}" Width="Auto" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTemplateColumn Header="" Width="Auto">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="RemoveSportButton_Click" Tag="{Binding}" Width="20" Height="20" Padding="0" Content="X" Style="{DynamicResource ModernButtonStyle}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Sports Status -->
                                <TextBlock Grid.Row="2" Margin="0,10,0,0" Text="Double-click cells to edit values. Changes are saved automatically." Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>
                        </TabItem>

                        <!-- Display Teams Tab -->
                        <TabItem Header="Display Teams" Style="{DynamicResource ModernTabItemStyle}">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Add Team Section -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Add Team:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <ComboBox x:Name="AddTeamComboBox" Grid.Column="1" Margin="0,0,10,0" IsEditable="True" Style="{DynamicResource ModernComboBoxStyle}"/>
                                    <Button x:Name="AddTeamButton" Grid.Column="2" Content="Add" Click="AddTeamButton_Click" Width="60" Style="{DynamicResource ModernButtonStyle}"/>
                                </Grid>

                                <!-- Display Teams DataGrid -->
                                <DataGrid x:Name="DisplayTeamsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                                           CanUserDeleteRows="False" IsReadOnly="True" CanUserReorderColumns="False" Style="{DynamicResource ModernDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Team Name" Binding="{Binding NcaaTeamName}" Width="*"/>
                                        <DataGridTemplateColumn Header="" Width="160">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="RemoveTeamButton_Click" Tag="{Binding}" Content="Remove" Style="{DynamicResource ModernButtonStyle}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>

                        <!-- XML to JSON Tab -->
                        <TabItem Header="XML to JSON" Style="{DynamicResource ModernTabItemStyle}">
                            <ScrollViewer Margin="10">
                                <StackPanel x:Name="XmlToJsonPanel">
                                    <TextBlock Text="XML to JSON:" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <CheckBox x:Name="XmlToJsonEnabledCheckBox" Content="Enabled" Margin="0,0,0,10" Style="{DynamicResource ModernCheckBoxStyle}" Foreground="{DynamicResource TextPrimaryBrush}" Checked="XmlToJsonEnabledCheckBox_Checked" Unchecked="XmlToJsonEnabledCheckBox_Unchecked"/>
                                    <TextBlock Text="File Paths:" Margin="0,0,0,5" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <ItemsControl x:Name="XmlToJsonPathsItemsControl">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Margin="20,0,0,5">
                                                    <TextBlock Text="Path: " Width="50" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                                    <TextBox Text="{Binding Path}" Width="300" Style="{DynamicResource ModernTextBoxStyle}" TextChanged="XmlToJsonPathTextBox_TextChanged"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <TabItem Header="Name Converters" Style="{DynamicResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Main Content Area -->
                    <TabControl Grid.Row="0" Margin="10" Style="{DynamicResource ModernTabControlStyle}">
                        <!-- Teams Tab -->
                        <TabItem Header="Teams" Style="{DynamicResource ModernTabItemStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Teams Search -->
                                <Grid Grid.Row="0" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Search Teams:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBox Grid.Column="1" x:Name="TeamsSearchTextBox" Margin="0,0,10,0" TextChanged="TeamsSearchTextBox_TextChanged" Style="{DynamicResource ModernTextBoxStyle}"/>
                                </Grid>

                                <!-- Teams DataGrid -->
                                <DataGrid x:Name="TeamsDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                                           CanUserDeleteRows="False" SelectionMode="Single" IsReadOnly="False" CanUserReorderColumns="False" Style="{DynamicResource ModernDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Char6 Code" Binding="{Binding name6Char}" Width="120" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Display Name" Binding="{Binding customName}" Width="200" IsReadOnly="False" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                        <DataGridTextColumn Header="SEO Name" Binding="{Binding seoname}" Width="150" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Short Name" Binding="{Binding nameShort}" Width="200" IsReadOnly="True"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Teams Status -->
                                <TextBlock Grid.Row="2" Margin="0,10,0,0" Text="Double-click cells to edit display names. Changes are saved automatically." Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>
                        </TabItem>

                        <!-- Conferences Tab -->
                        <TabItem Header="Conferences" Style="{DynamicResource ModernTabItemStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Conferences Search -->
                                <Grid Grid.Row="0" Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Search Conferences:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBox Grid.Column="1" x:Name="ConferencesSearchTextBox" Margin="0,0,10,0" TextChanged="ConferencesSearchTextBox_TextChanged" Style="{DynamicResource ModernTextBoxStyle}"/>
                                </Grid>

                                <!-- Conferences DataGrid -->
                                <DataGrid x:Name="ConferencesDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                                           CanUserDeleteRows="False" SelectionMode="Single" IsReadOnly="False" CanUserReorderColumns="False" Style="{DynamicResource ModernDataGridStyle}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="SEO Name" Binding="{Binding conferenceSeo}" Width="150" IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Custom Name" Binding="{Binding customConferenceName}" Width="250" IsReadOnly="False" EditingElementStyle="{DynamicResource ModernTextBoxStyle}"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <!-- Conferences Status -->
                                <TextBlock Grid.Row="2" Margin="0,10,0,0" Text="Double-click cells to edit custom names. Changes are saved automatically." Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
